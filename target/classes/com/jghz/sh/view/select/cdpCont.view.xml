<?xml version="1.0" encoding="UTF-8"?>
<ViewConfig>
  <Arguments/>
  <Context/>
  <Model/>
  <View>
    <Dialog id="$dialogCont">
      <ClientEvent name="onCreate">self.$show=function(config){&#xD;
	if(!config.callback){&#xD;
		dorado.MessageBox.alert(&quot;当前方法需要定义一个callback函数&quot;);&#xD;
		return;&#xD;
	}else{&#xD;
		self.callback=config.callback;&#xD;
	}&#xD;
	if(config.caption){&#xD;
		self.set(&quot;caption&quot;,config.caption);&#xD;
	}&#xD;
	if(config.width){&#xD;
		self.set(&quot;width&quot;,config.width);&#xD;
	}&#xD;
	if(config.height){&#xD;
		self.set(&quot;height&quot;,config.height);&#xD;
	}&#xD;
	if(config.selected){&#xD;
		self.selected=config.selected;&#xD;
	}&#xD;
	self.show();&#xD;
}</ClientEvent>
      <Buttons/>
      <Children>
        <DataSet id="$dsCont">
          <Property name="dataProvider">shjcCommService#queryCont</Property>
          <Property name="pageSize">20</Property>
          <Property name="dataType">[BaseDtCont]</Property>
        </DataSet>
        <ToolBar>
          <DataPilot>
            <Property name="dataSet">$dsCont</Property>
            <Property name="itemCodes">pages</Property>
          </DataPilot>
          <Separator/>
          <ToolBarButton>
            <ClientEvent name="onClick">var data = view.get(&quot;#$formCont.entity&quot;);&#xD;
with(view.get(&quot;#$dsCont&quot;)){&#xD;
	set(&quot;parameter&quot;, data);&#xD;
	flushAsync();&#xD;
}&#xD;
&#xD;
</ClientEvent>
            <Property name="caption">查询</Property>
            <Property name="icon">url(>skin>common/icons.gif) -20px -40px</Property>
          </ToolBarButton>
        </ToolBar>
        <AutoForm id="$formCont">
          <Property name="cols">*,*,*</Property>
        </AutoForm>
        <DataGrid id="$dgCont">
          <ClientEvent name="onDataRowDoubleClick">&#xD;
var data = view.get(&quot;#$dsCont&quot;).getData(&quot;#&quot;);&#xD;
//var result=[];&#xD;
//result.push(data.toJSON());&#xD;
view.id(&quot;$dialogCont&quot;).callback(data.toJSON());&#xD;
&#xD;
</ClientEvent>
          <Property name="dataSet">$dsCont</Property>
          <Property name="readOnly">true</Property>
          <DataColumn>
            <Property name="property">contNo</Property>
            <Property name="name">contNo</Property>
          </DataColumn>
          <DataColumn>
            <Property name="property">prodTypeName</Property>
            <Property name="name">prodTypeName</Property>
          </DataColumn>
          <DataColumn name="productName">
            <Property name="property">productName</Property>
          </DataColumn>
          <DataColumn>
            <Property name="property">custName</Property>
            <Property name="name">custName</Property>
          </DataColumn>
          <DataColumn>
            <Property name="property">settleType</Property>
            <Property name="name">settleType</Property>
          </DataColumn>
        </DataGrid>
      </Children>
      <Tools/>
    </Dialog>
  </View>
</ViewConfig>
